<h3><%= translation.sell %></h3>
<div class="scroll-container" style="height: 300px;" id="offer_scroll">
  <ul class="list-group" style="width: 250px;">
    <li class="list-group-item">
      <span class="badge"><span id="balance_token"></span> <%= selectedToken.name %></span>
      <%= translation.balance %>
    </li>
  </ul>
  <form class="form">
    <div class="form-group">
      <div class="input-group">
        <div class="input-group-addon" style="width: 125px;"><%= selectedToken.name %></div>
        <input type="text" class="form-control" style="width: 125px;" id="sell_amount" onchange="sell_change()" placeholder="<%= translation.amount_to_sell %>" />
      </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <div class="input-group-addon" style="width: 125px;"><%= selectedToken.name+'/'+selectedBase.name %></div>
        <input type="text" class="form-control" style="width: 125px;" id="sell_price" onchange="sell_change()" placeholder="<%= translation.price %>" />
      </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <div class="input-group-addon" style="width: 125px;"><%= selectedBase.name %></div>
        <input type="text" class="form-control" style="width: 125px;" id="sell_total" onchange="sell_change()" placeholder="<%= translation.total %>" />
      </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <div class="input-group-addon" style="width: 125px;"><%= translation.expires %></div>
        <input type="text" class="form-control" style="width: 125px;" id="sell_expires" placeholder="<%= translation.number_of_blocks %>" value="2500" />
      </div>
    </div>
    <!-- <div class="form-group">
      <div class="input-group">
        <div class="input-group-addon" style="width: 125px;"><%= translation.auto_refresh %></div>
        <input type="checkbox" class="form-control" style="width: 125px;" id="sell_refresh" />
      </div>
    </div> -->
    <button type="submit" class="btn btn-danger" style="width: 250px;" id="sell_submit"><%= translation.sell %></button>
  </form>
</div>
