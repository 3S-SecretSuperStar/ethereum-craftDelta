<form class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-4 control-label"><%= selectedToken.name %></label>
    <div class="col-sm-8">
      <input type="text" class="form-control trn" id="sell_amount" onchange="sell_change()" placeholder="amount_to_sell" />
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 control-label"><%= selectedToken.name %>/<%= selectedBase.name %></label>
    <div class="col-sm-8">
      <input type="text" class="form-control trn" id="sell_price" onchange="sell_change()" placeholder="price" />
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 control-label"><%= selectedBase.name %></label>
    <div class="col-sm-8">
      <input type="text" class="form-control trn" id="sell_total" onchange="sell_change()" placeholder="total" />
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 control-label trn">expires</label>
    <div class="col-sm-8">
      <input type="text" class="form-control trn" id="sell_expires" placeholder="Number_of_blocks" value="2500" />
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-8">
      <button type="submit" style="width: 100%;" class="btn btn-danger trn" id="sell_submit">sell</button>
    </div>
  </div>
</form>
